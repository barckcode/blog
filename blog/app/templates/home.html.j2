{% extends "layouts/base.html.j2" %}
{% from 'components/get_posts.html.j2' import get_posts %}
{% from 'components/get_categories.html.j2' import get_categories %}
{% block title %}Home{% endblock %}
{% block head %}
    {{ super() }}
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@helmcode">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ presentation }}">
    <meta name="twitter:creator" content="@helmcode">
    <meta name="twitter:image" content="https://s3.eu-west-1.amazonaws.com/static.helmcode.com/images/home/portada.jpg">
    <!-- Open Graph data -->
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://helmcode.com" />
    <meta property="og:image" content="https://s3.eu-west-1.amazonaws.com/static.helmcode.com/images/home/portada.jpg" />
    <meta property="og:description" content="{{ presentation }}" />
    <meta property="og:site_name" content="Helmcode" />
    <link rel="stylesheet" href="/static/css/templates/home.css" />
    <link rel="stylesheet" href="/static/css/components/get_posts.css" />
    <link rel="stylesheet" href="/static/css/components/get_categories.css" />
{% endblock %}
{% block main %}
<div class="portada">
    <picture class="portada_container_img">
        <source srcset="https://s3-eu-west-1.amazonaws.com/static.helmcode.com/images/about/perfil.jpg">
        <img src="https://s3-eu-west-1.amazonaws.com/static.helmcode.com/images/about/perfil.jpg" class="portada_img_perfil" alt="Foto de perfil">
    </picture>
    <div class="portada_presentation">
        <h5 class="portada_presentation_title">
            {{ title }}
        </h5>
        <p class="portada_presentation_text">
            {{ presentation }}
        </p>
    </div>
    <hr class="separator">
    <div class="posts">
        <h3 class="posts_title">
            Ãšltimos posts:
        </h3>
        {# {% for row in records_data %}
